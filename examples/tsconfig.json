{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "react": ["./node_modules/@types/react"],
      "react-native": ["./node_modules/react-native"]
    }
  },
  "include": [
    "*.ts",
    "*.tsx",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "complete-chat-app",
    "apollo-graphql",
    "testing"
  ]
}
